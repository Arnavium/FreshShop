<%- include("./partials/header.ejs") %>

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Cart</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/home">Home</a></li>
                        <li class="breadcrumb-item active">Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Cart  -->
    <div class="cart-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-main table-responsive">
                        <% if(cart != null && cart.items.length>0){%>
                        <table class="table">
                            <thead>
                                <tr style="text-align: center;">
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Price (/kg)</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%cart.items.forEach(function(item){ %>
                                    <tr style="text-align: center;">
                                        <td class="thumbnail-img">
                                            <a href="#">
                                                <img class="img-fluid" src="<%=item.image%>" alt="" />
                                            </a>
                                        </td>
                                        <td class="name-pr">
                                            <a href="/view/<%=item.item%>">
                                                <%=item.itemname%>
                                            </a>
                                        </td>
                                        <td class="price-pr">
                                            <p>Rs <%=item.price%></p>
                                        </td>
                                        <td>
                                            <form action="/minus/<%=item.item%>" method="POST" style="display: inline;">
                                                <button class="minus"><i class="fas fa-minus"></i></button>
                                            </form>
                                             <span style="padding: 5px;"><%=item.quantity%></span> 
                                            <form action="/plus/<%=item.item%>" method="POST" style="display: inline;">
                                                <button class="plus"><i class="fas fa-plus"></i></button>
                                            </form>
                                            </td>
                                        <td class="total-pr">
                                            <p>Rs <%= item.price*item.quantity %></p>
                                        </td>
                                        <td class="remove-pr">
                                            <form action="/remove/<%=item.item%>" method="POST">
                                                <button class="remove"><i class="fas fa-times"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <%})%>
                            </tbody>
                        </table>
                        <%}else{%>
                            <h1>No Products</h1>
                        <%}%>
                    </div>
                </div>
            </div>
            <% if(cart != null && cart.items.length>0){%>
            <div class="row my-5">
                <div class="col-lg-8 col-sm-12"></div>
                <div class="col-lg-4 col-sm-12">
                    <div class="order-box">
                        <h3>Order summary</h3>
                        <div class="d-flex">
                            <h4>Sub Total</h4>
                            <div class="ml-auto font-weight-bold"> Rs <%=cart.totalPrice%> </div>
                        </div>
                        <div class="d-flex">
                            <h4>Discount</h4>
                            <div class="ml-auto font-weight-bold"> Rs 0 </div>
                        </div>
                        <hr class="my-1">
                        <!-- <div class="d-flex">
                            <h4>Coupon Discount</h4>
                            <div class="ml-auto font-weight-bold"> $ 10 </div>
                        </div> -->
                        <!-- <div class="d-flex">
                            <h4>Tax</h4>
                            <div class="ml-auto font-weight-bold"> $ 2 </div>
                        </div> -->
                        <div class="d-flex">
                            <h4>Shipping Cost</h4>
                            <div class="ml-auto font-weight-bold"> Free </div>
                        </div>
                        <hr>
                        <div class="d-flex gr-total">
                            <h5>Grand Total</h5>
                            <div class="ml-auto h5"> Rs <%=cart.totalPrice%> </div>
                        </div>
                        <hr> </div>
                </div>
                <div class="col-12 d-flex shopping-box">
                    <form action="/checkout" method="POST" style="display: contents;">
                        <button class="ml-auto btn hvr-hover" style="border: none; color: white;">Checkout</button>
                    </form> 
                </div>
            </div>
            <%}%>
        </div>
    </div>
    <!-- End Cart -->

<%- include("./partials/footer.ejs") %>